<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gan.keepsafe.atys.AtyLostFind">

    <TextView
        style="@style/TitleStyle"
        android:text="@string/PROTECT_FROM_THEFT" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp">

        <TextView
            style="@style/ContentTitle"
            android:paddingBottom="3dp"
            android:text="安全号码" />

        <TextView
            style="@style/ContentTitle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="12345678987" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_divider"
        android:layout_marginTop="3dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            style="@style/ContentTitle"
            android:layout_marginBottom="3dp"
            android:text="防盗功能是否开启" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/lock" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_divider"
        android:layout_marginTop="3dp" />


    <TextView
        style="@style/ContentTitle"
        android:paddingBottom="3dp"
        android:paddingTop="2dp"
        android:text="重新进入设置向导" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_divider"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#a000"
        android:layout_marginTop="5dp"
        android:paddingLeft="3dp"
        android:paddingTop="2dp"
        android:text="功能简介"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        style="@style/ContentTitle"
        android:drawableLeft="@android:drawable/star_big_on"
        android:drawableStart="@android:drawable/star_big_on"
        android:text="GPS追踪:#*location*#" />

    <TextView
        style="@style/ContentTitle"
        android:drawableLeft="@android:drawable/star_big_on"
        android:drawableStart="@android:drawable/star_big_on"
        android:text="播放报警音乐:#*alarm*#" />

    <TextView
        style="@style/ContentTitle"
        android:drawableLeft="@android:drawable/star_big_on"
        android:drawableStart="@android:drawable/star_big_on"
        android:text="远程删除数据:#*wipedata*#" />

    <TextView
        style="@style/ContentTitle"
        android:drawableLeft="@android:drawable/star_big_on"
        android:drawableStart="@android:drawable/star_big_on"
        android:text="远程锁屏:#*lockscreen*#" />

</LinearLayout>


